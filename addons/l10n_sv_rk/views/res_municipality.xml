<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_municipality_tree" model="ir.ui.view">
        <field name="name">res.municipality.tree</field>
        <field name="model">res.municipality</field>
        <field name="arch" type="xml">
            <tree string="Municipality">
                <field name="name"/>
                <field name="code"/>
                <field name="dpto_id"/>
            </tree>
        </field>
    </record>
    <record id="action_municipality_contacts" model="ir.actions.act_window">
        <field name="name">Municipios</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.municipality</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_municipality_partner"
              name="Municipios"
              parent="contacts.res_partner_menu_config"
              action="action_municipality_contacts"
    />
</odoo>