<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_tax_form_inherit_form" model="ir.ui.view">
        <field name="name">account.tax.form.inherit.form</field>
        <field name="model">account.tax</field>
        <field name="inherit_id" ref="account.view_tax_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page name="info_dte" string="DTE">
                    <group cols="4">
                        <group string="Datos del impuesto">
                            <field name="code_dte_sv"/>
                        </group>
                    </group>
                    <group>
                        <group string="Retenciones">
                            <field name="retencion_iva_mh"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
