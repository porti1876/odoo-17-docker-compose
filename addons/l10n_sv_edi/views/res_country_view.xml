<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_country_code_inherit_tree" model="ir.ui.view">
        <field name="name">country.code.inherit.tree</field>
        <field name="model">res.country</field>
        <field name="inherit_id" ref="base.view_country_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='code']" position="after">
                <field name="code_sv_edi"/>
            </xpath>
        </field>
    </record>

    <record id="view_country_code_inherit_form" model="ir.ui.view">
        <field name="name">country.code.inherit.form</field>
        <field name="model">res.country</field>
        <field name="inherit_id" ref="base.view_country_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='code']" position="after">
                <field name="code_sv_edi"/>
            </xpath>
        </field>
    </record>
</odoo>
