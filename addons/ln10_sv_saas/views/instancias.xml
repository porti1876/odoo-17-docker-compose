    <record id="res_instancias_list" model="ir.ui.view">
        <field name="name">Instancias </field>
        <field name="model">ln10_sv_saas.instancias</field>
        <field name="arch" type="xml">
            <tree string="Instancias" >
                <field name="nameConf"/>
                <field name="master_password" password="True" />
                <field name="htt_port"/>
                <field name="db_host"/>
                <field name="db_port"/>
                <field name="db_user"/>
                <field name="db_password" password="True"/>
                <field name="proxy_mode"/>
                <field name="logfile"/>
                <field name="xmlrpc_port"/>
                <field name="addons_path"/>
                                    
            </tree>

        </field>
    </record>


    <record id="clave_privada_form" model="ir.ui.view">
        <field name="name">clave privada</field>
        <field name="model">add.pkey.rskay</field>
        <field name="arch" type="xml">
            <form string="">
                <header>
                    <button name="create_dt" class="oe_highlight" type="object" string="Create" attrs="{'invisible': [('id', '!=', False)]}"/>
                </header>
                <sheet>
                    <group>
                       <group>
                        <group>
                            <field name="name" attrs="{'readonly': [('id', '!=', False)]}"/>
                        </group>
                        <group>
                            <field name="password_pkey" password="True"  attrs="{'readonly': [('id', '!=', False)]}"/>
                          <field name="username_ssh"  attrs="{'readonly': [('id', '!=', False)]}"/>
                        </group>
                        
                        
                       </group> 
                      
                    </group>
                   <notebook>
                    <page>
                        <group>
                            <field name="pkey_private"  attrs="{'invisible': [('id', '!=', False)], 'readonly': [('id', '!=', False)]}"/>
                           </group>
                    </page>
                   </notebook>
                   
                    
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="add_clave_tree" model="ir.ui.view">
        <field name="name">add_clave.tree</field>
        <field name="model">add.pkey.rskay</field>
        <field name="arch" type="xml">
            <tree string="Clave privada ssh">
                <field name="name"/>
                
                <field name="password_pkey" password="True"/>
            </tree>
        </field>
    </record>


   

<record id="file_ssh_id_form" model="ir.ui.view">
    <field name="name">Configuracion extraer instancias</field>
    <field name="model">files.instancias</field>
    <field name="arch" type="xml">
        <form string="">
            <header>
                <button string="Conectar ssh" name="conectar_ssh" type="object" class="oe_highlight"/>
                <button string="update" name="update_from_remote_confs" type="object" class="oe_highlight"/>
            </header>
            <sheet>
                <group  string="Configuracion para extraer instancias">
                    <group>
                        <field name="name"/>
                        <field name="ip_server"/>
                    </group>
                    
                    <group>
                        <field name="host"/>
                        <field name="username"/>
                        <field name="port"/>
                        <field name="shh_ids" attrs="{'invisible': [('id','!=',False)]}" />
                        <field name="password_pkey" password="True"/>
                    </group>

                    
                </group>
                
            </sheet>
            
            <div class="oe_chatter">
                <field name="message_follower_ids"/>
                <field name="activity_ids"/>
                <field name="message_ids"/>
            </div>
        </form>
    </field>
</record>

<record id="file_tree" model="ir.ui.view">
<field name="name">Configuracion extraer instancias</field>
<field name="model">files.instancias</field>
<field name="arch" type="xml">
    <tree>
        <field name="name"/>
        <field name="ip_server"/>
        <field name="username"/>
        <field name="port"/>
    </tree>
</field>
</record>

<record id="systemct_form" model="ir.ui.view">
<field name="name">Extraer archivo system</field>
<field name="model">files.systemctl</field>
<field name="arch" type="xml">
    <form string="">
        <header>
            <button string="Extrer archivos" name="update_file_systemctl" type="object" class="oe_highlight"/>
        </header>
        <sheet>
            <group>
                <group string="Configuracion ssh">
                    <field name="servidores"/>
                    <field name="shh_ids"/>
                    <field name="port"/>
                    <field name="username"/>
                    
                </group>
                <group>
                    <field name="name"/>
                    <field name="ip_server"/>
                    <field name="pkey_private" attrs="{'invisible': [('pkey_private','!=', False)]}"/>
                    <field name="password_pkey"  password="True" />
                </group>                   
            </group>         
        </sheet>
        <div class="oe_chatter">
            <field name="message_follower_ids"/>
            <field name="activity_ids"/>
            <field name="message_ids"/>
        </div>
    </form>
</field>
</record>


<record id="syste_tree" model="ir.ui.view">
<field name="name">syste.tree</field>
<field name="model">files.systemctl</field>
<field name="arch" type="xml">
    <tree string="">
        <field name="name"/>
        <field name="ip_server"/>
    </tree>
</field>
</record>

<record id="lista_system_form" model="ir.ui.view">
<field name="name">lista_system.form</field>
<field name="model">listas.systemctl</field>
<field name="arch" type="xml">
    <form string="">
        <header>
            <button string="Guardar" name="updte_file" type="object" class="oe_highlight" icon="fa-save"/>
            <button string="Activar" name="activar" type="object" class="oe_highlight"/>
        </header>
        <sheet>

       
        <sheet>
            <group string="ssh">
                <group>
                <group>
                    <field name="username"/>
                   
                    <field name="port"/>
                    <field name="ssh_ids"/>                    
                </group>
                <group>
                    <field name="ip_server" attrs="{'readonly': [('ip_server','!=', False)]}" />
                    <field name="password_pkey" password="True"/>
                </group>
                </group>
            </group>
        </sheet>
        <sheet>
            <group>
                <group>
                    <field name="name" attrs="{'readonly': [('ip_server','!=', False)]}"/>
                    <field name="file_systemctl"/>
                  
                </group>
            </group>
        </sheet>

    </sheet>
        <div class="oe_chatter">
            <field name="message_follower_ids"/>
            <field name="activity_ids"/>
            <field name="message_ids"/>
        </div>
    </form>
</field>
</record>

<record id="lista_file_syst_tree" model="ir.ui.view">
<field name="name">lista_file_syst.tree</field>
<field name="model">listas.systemctl</field>
<field name="arch" type="xml">
    <tree string="">
        <field name="name"/>
        <field name="ip_server"/>
        
       <button string="start" name="startSystemctl" type="object" class="oe_highlight" icon="fa-play"/>
       <button string="stop" name="stopSystemctl" type="object" class="oe_highlight" icon="fa-stop"/>
       <button string="restart" name="restartSystemctl" type="object" class="oe_highlight" icon="fa-refresh"/>
    </tree>
</field>
</record>
</odoo>